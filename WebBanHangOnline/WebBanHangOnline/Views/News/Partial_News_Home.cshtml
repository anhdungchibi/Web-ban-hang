@model IEnumerable<WebBanHangOnline.Models.EF.News>
@if (Model != null && Model.Any())
{

    <div class="blogs">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title">
                        <h2>Tin tức mới nhất</h2>
                    </div>
                </div>
            </div>

            <div class="row blogs_container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col mb-2">
                        <div class="blog_item">
                            <div class="blog_background rounded" style="background-image:url(@item.Image)"></div>
                            <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center rounded">
                                <h4 class="blog_title">@item.Title</h4>
                                <span class="blog_meta"><i class="fa fa-user" aria-hidden="true"></i> @item.CreatedBy | @item.CreatedDate.ToString("dd/MM/yyyy") </span>
                                <a class="blog_more" href="/@item.Alias-n@(item.Id)">Đọc tiếp</a>
                            </div>
                        </div>
                    </div>
                }

                
            </div>
        </div>
    </div>

}

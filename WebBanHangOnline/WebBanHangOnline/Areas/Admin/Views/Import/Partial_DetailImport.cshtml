
@model IEnumerable<WebBanHangOnline.Models.EF.ImportDetail>
@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Đơn vị tính</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@i</td>
                <td>@item.Product.Title</td>
                <td>@WebBanHangOnline.Common.Common.FormatNumber(item.Price, 0)</td>
                <td>@item.Quantity</td>
                <td>@item.CalculationUnit</td>
            </tr>
                i++;
            }
        </tbody>
    </table>
}
